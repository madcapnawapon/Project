<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Pet Sitters</title>
     <link rel="stylesheet" href="/css/sitter.css">
</head>
<body>
   
    <nav> 
        <div class="contianer">
        <div class="nav-wrapper">
            <div class="logo"> 
                <a href="/">
                    <img src="/logo.webp" alt="logo" class="logo-image">
                    <div class="logo-text"><h3>Find Pet Sitters</h3>
                        <h6>connect with lovely pet Sitter</h6></div>
                </a>
            </div>
            
            
    <% if(loggedIn) { %>
                
        <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/logout">logout</a></li>
            </ul>
        <% } %>   
        <% if(!loggedIn) { %>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
                <li><a href="/about">About Us</a></li>    
            </ul>
        <% } %>
        </div>
    </div>
    </nav>
    <section id="my-account-section">
        <h2>Welcome to Your Account</h2>
        <div id="user-profile" class="account-section">
            <h3>User Profile</h3>

            <p>Username: <span id="username"><%= UserData.username %></span></p>
            <p>Email: <span id="user-email"><%= UserData.email %></span></p>
            <p>Phone Number: <span id="user-phone"><%= UserData.phone %></span></p>
            <p>Contact Info: <span id="user-contact"></span></p>
            <p>Service Details: <span id="user-service-details"></span></p>
            <p>Service Type: <span id="user-service-type"></span></p>
            <p>Rate: <span id="user-rate"></span></p>
            <p>Gender: <span id="user-gender"></span></p>
            <p>Age: <span id="user-age"></span></p>
            <p>Pet Type: <span id="user-pet-type"></span></p>
            <p>Max Pets: <span id="user-max-pets"></span></p>
        </div>
    
        <!-- Update Profile -->
        <div id="update-profile" class="account-section">
            <h3>Update Profile</h3>
            <form>
                <label for="new-username">New Username:</label>
                <input type="text" id="new-username" name="new-username">
    
                <label for="new-email">New Email:</label>
                <input type="email" id="new-email" name="new-email">
    
                <label for="new-phone">New Phone Number:</label>
                <input type="tel" id="new-phone" name="new-phone">
                
                <label for="new-contact-info">New Contact Info:</label>
                <input type="text" id="new-contact-info" name="new-contact-info">
    
                <label for="new-service-details">New Service Details:</label>
                <input type="text" id="new-service-details" name="new-service-details">
    
                <label for="new-service-type">New Service Type:</label>
                <input type="text" id="new-service-type" name="new-service-type">
    
                <label for="new-rate">New Rate:</label>
                <input type="text" id="new-rate" name="new-rate">
    
                <label for="new-gender">New Gender:</label>
                <input type="text" id="new-gender" name="new-gender">
    
                <label for="new-age">New Age:</label>
                <input type="text" id="new-age" name="new-age">
    
                <label for="new-pet-type">New Pet Type:</label>
                <input type="text" id="new-pet-type" name="new-pet-type">
    
                <label for="new-max-pets">New Max Pets:</label>
                <input type="text" id="new-max-pets" name="new-max-pets">
    
                <button type="submit">Update Profile</button>
            </form>
        </div>
    
        <button onclick="logout()">Logout</button>
        <!-- Add other sections as needed -->
    </section>

   
    <footer>
        <p>&copy; 2024 Find Pet Sitters</p>
    </footer>

    <script src="app.js"></script>
</body>
</html>