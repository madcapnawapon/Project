    <section id="search-section">
          <img src="/pngtree-simple-cute-pet-dog-background-picture-image_1375478.jpg" alt="Dog and Cat" class="background-image">

          <h2>เลือกประเภทบริการให้กับสัตว์เลี้ยงของคุณ</h2>
          <form id="search-form">
              <label for="service">ประเภทบริการ</label>
              <select id="service" name="บริการ" > 
                  <option value="All">All</option>
                  <option value="ฝากเลี้ยงค้างคืน">ฝากเลี้ยงค้างคืน</option>
                  <option value="ฝากเลี้ยงรายวัน">ฝากเลี้ยงรายวัน</option>
                  <option value="ฝากเลี้ยงระหว่างวัน">ฝากเลี้ยงระหว่างวัน</option>
                  <option value="ดูแลสัตว์เลี้ยงที่บ้าน">ดูแลสัตว์เลี้ยงที่บ้าน</option>
                  <option value="พาสัตว์เลี้ยงไปเดินเล่น">พาสัตว์เลี้ยงไปเดินเล่น</option>
                 
                  <!-- เพิ่มตัวเลือกเพิ่มเติมตามต้องการ -->
              </select>
             
              <label for="service">พื้นที่ให้บริการ</label>
              <input type="text" id="location" name="location" required>
  
              <label for="pet-type" class="dropdown-label">Pet Type:</label>
              <div class="dropdown">
                  <button onclick="toggleDropdown(event)">Select Pet(s) <span class="dropdown-arrow">&#9662;</span></button>
  
  
                  <div id="dropdown-content" class="dropdown-content">
                      <input type="checkbox" id="cat" name="pet-type" value="cat">
                      <label for="cat">Cat</label><br>
                      <input type="checkbox" id="dog" name="pet-type" value="dog">
                      <label for="dog">Dog</label><br>
                      <input type="checkbox" id="hamster" name="pet-type" value="hamster">
                      <label for="hamster">Hamster</label><br>
                      <input type="checkbox" id="fish" name="pet-type" value="fish">
                      <label for="fish">Fish</label><br>
                      <!-- เพิ่มตัวเลือกเพิ่มเติมตามต้องการ -->
                     <button onclick="confirmSelection(event)">ยืนยัน</button>
                  </div>
              </div>
              
              <script>
              function toggleDropdown(event) {
      event.preventDefault(); // ป้องกันการรีเฟรชหน้าเว็บ
      var dropdownContent = document.getElementById("dropdown-content");
      dropdownContent.classList.toggle("show");
  }
  
  function confirmSelection(event) {
      event.preventDefault(); // ป้องกันการรีเฟรชหน้าเว็บ
      var dropdownContent = document.getElementById("dropdown-content");
      dropdownContent.classList.remove("show");
  }
  
              </script>
            
            <style>
            .dropdown {
                position: relative;
                display: inline-block;
            }
            
            .dropdown-label {
                cursor: pointer;
            }
            
            .dropdown-content {
                display: none;
                position: absolute;
                background-color: #f9f9f9;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                padding: 12px 16px;
                z-index: 1;
            }
            
            .dropdown-content.show {
                display: block;
            }
            
            .dropdown-arrow {
                margin-left: 5px;
            }
            </style>
            
            
            
            


            <button type="submit">Search</button>
        </form>
    </section>

